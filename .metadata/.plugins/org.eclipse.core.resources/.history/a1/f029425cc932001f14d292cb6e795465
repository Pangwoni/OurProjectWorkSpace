package com.spring5legacy.mypro00.common.security;

import org.apache.tomcat.util.net.openssl.ciphers.Authentication;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;

@Controller
public class MyAccessForbiddenDeniedController {
	
	@GetMapping(value = {"accessDeniedError" , "accessForbiddenError"})
	public String toAccessForbiddenPage(Model model , Authentication authentication) {
		
		System.out.println("AaccessDenied(Forbidden) Error --- Authentication Info: " + authentication);
		model.addAttribute("msg","접근 금지");
		
		return "common/errors/myErrorAccessDeniedPage"; 
	}
}
