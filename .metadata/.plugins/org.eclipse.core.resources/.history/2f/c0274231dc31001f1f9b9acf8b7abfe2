<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.spring5legacy.mypro00.mapper.MyMemberMapper">

	<resultMap id="authMap" type="com.spring5legacy.mypro00.domain.MyAuthorityVO">
		<result property="userid" column="userid"/>
		<result property="authority" column="authority"/>
	</resultMap>
	<resultMap type="com.spring5legacy.mypro00.mapper.MyMemberVO" id="memberMap"></resultMap>

	<select id="selectMember">
		SELECT A.USERID, A.USERPW, A.USERNAME, A.MREGDATE, A.MMODDATE, A.MDROPFLAG, A.ENABLED, B.AUTHORITY
		FROM myuser.tbl_mymember a LEFT OUTER JOIN myuser.tbl_mymember_authorities b
		        ON (a.userid = b.userid)
		WHERE a.userid = 'a'
	</select>
    
</mapper>