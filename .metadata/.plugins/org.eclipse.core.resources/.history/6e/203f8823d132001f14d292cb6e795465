	<security:http>
		<security:intercept-url pattern="/" method="GET" access="permitAll"/>
		<security:intercept-url pattern="/myboard/list" method="GET" access="hasAnyAuthority('USER','ROLE_MEMBER','ROLE_MANAGER','ADMIN')"/>
		<security:intercept-url pattern="/myboard/register" method="GET" access="isAuthenticated()"/>
		<security:intercept-url pattern="/myboard/detail" method="GET" access="hasAuthority('ADMIN')"/>
		
		<security:form-login login-page="/login" login-processing-url="/myLogin" default-target-url="/"
						     authentication-success-handler-ref="myLoginAuthenticationSuccessHandler"/>
		<security:logout logout-success-url="/" />
		
		<security:remember-me data-source-ref="dataSource" token-validity-seconds="500000" remember-me-parameter="remember"/>
		
		<security:access-denied-handler error-page="/accessDeniedError"/>
		<security:access-denied-handler ref="myMemberAccesssDeniedHandlerImpl"/>
		
	</security:http>
	
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="myMemberUserDetailsServiceImpl">
			<security:password-encoder ref="bcryptPassWordEncoder"/>	
		</security:authentication-provider>
	</security:authentication-manager>
	
</beans>
