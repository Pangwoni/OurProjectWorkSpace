	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.8.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<!-- 승인/인증을 위해 UserDetails 타입 객체를 가져오는 빈(UserDetailsService 타입 빈) -->
	<bean id="myMemberUserDetailsServiceImpl" class="com.spring5legacy.mypro00.common.security.MyMemberUserDetailsServiceImpl"/>

	<!-- 사용자 password 암호화 처리 빈: BCrypt 방식 암호화 -->
	<bean id="bcryptPassWordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	<bean id="myLoginAuthenticationSuccessHandler" class="com.spring5legacy.mypro00.common.security.MyLoginAuthenticationSuccessHandler"/>
	<bean id="MyMemberAccesssDeniedHandlerImpl" class="com.spring5legacy.mypro00.common.security.MyMemberAccesssDeniedHandlerImpl"/>
	
	<!--
	Multiple annotations found at this line:
	- Class 'org.springframework.security.web.access.expression.WebExpressionVoter' is marked deprecated
	- Class 'org.springframework.security.web.csrf.LazyCsrfTokenRepository' is marked deprecated
	- Class 'org.springframework.security.web.access.intercept.FilterSecurityInterceptor' is marked deprecated
